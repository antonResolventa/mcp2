{
  "application": {
    "name": "MCP Demo Application",
    "version": "1.0.0",
    "description": "Демонстрационное приложение для MCP серверов",
    "author": "Resolventa Team"
  },
  "database": {
    "host": "mysql",
    "port": 3306,
    "username": "demo",
    "password": "password",
    "database": "demo",
    "connection_limit": 10,
    "timeout": 30
  },
  "server": {
    "host": "0.0.0.0",
    "port": 8000,
    "debug": true,
    "cors": {
      "enabled": true,
      "allow_origins": ["*"],
      "allow_methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
      "allow_headers": ["Content-Type", "Authorization"]
    }
  },
  "logging": {
    "level": "info",
    "format": "json",
    "outputs": ["console", "file"],
    "file": {
      "path": "/var/log/mcp-demo.log",
      "rotation": {
        "max_size_mb": 10,
        "max_files": 5,
        "max_age_days": 7
      }
    }
  },
  "features": {
    "authentication": true,
    "caching": {
      "enabled": true,
      "ttl_seconds": 300,
      "max_items": 1000
    },
    "rate_limiting": {
      "enabled": true,
      "requests_per_minute": 100
    }
  }
}
